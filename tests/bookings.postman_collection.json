    {
      "name": "Delete booking",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/bookings/{{bookingId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "bookings",
            "{{bookingId}}"
          ]
        }
      },
      "response": []
    }
  ],
